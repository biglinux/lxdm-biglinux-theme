post_install() {
    cp /etc/lxdm/lxdm.conf /etc/lxdm/lxdm.conf.save
    sed -i '/session=/s/.*/session=/usr/bin/wmaker/' /etc/lxdm/lxdm.conf
    sed -i '/theme=/s/.*/theme=biglinux-theme/' /etc/lxdm/lxdm.conf
}

post_remove() {
    echo ":: Restoring previous lxdm.conf"
	mv /etc/lxdm/lxdm.conf.save /etc/lxdm/lxdm.conf
}
